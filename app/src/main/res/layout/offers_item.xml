<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="7dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:background="@drawable/borders"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/supercar"
            android:scaleType="centerCrop"
            android:id="@+id/cat_nav_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nav_cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:textSize="24sp"
                android:background="#CDB0B1C8"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <TextView
                android:id="@+id/nav_cat_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Version:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <TextView
                android:id="@+id/nav_cat_horse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  GTR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0BED14"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginRight="40dp"
                android:src="@drawable/fuelsmaller" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>