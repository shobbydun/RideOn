<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/borders"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/supercar"
            android:scaleType="centerCrop"
            android:id="@+id/allview_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/all_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <TextView
                android:id="@+id/all_descri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#050505"/>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"/>

                <TextView
                    android:textSize="17sp"
                    android:id="@+id/detailed_price"
                    android:textStyle="bold"
                    android:textColor="#0CE322"
                    android:text="*****"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ratingstars"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/all_rating"
                    android:text="5.0"
                    android:textColor="#090500"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginRight="70dp"
                android:src="@drawable/fuelsmaller" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>